<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4 text-center">Burger Eatery</h1>
        <p class="lead text-center">Burgers, burgers, burgers!</p>
    </div>
</div>



<div class="container">

    <panel>
        <form class="createBurger">
            <div class="form-group">
                <label for="new" id="color-override">Add New Burger:</label>
                <input type="text" id="addburger" name="burgers">
                {{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
                <button type="submit" class="btn btn-primary" id="addburger">Add this burger</button>
            </div>
        </form>
    </panel>

    <div class="row">
        <!-- UnDevoured Burgers -->
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="left"><strong>New Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <strong>{{this.id}} - {{this.burger_name}}</strong>
                        <button type="button" class="eatburger btn btn-success" id="eatbutton" data-id="{{this.id}}"
                            data-newdevoured="{{devoured}}">Click to eat this burger!</button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <!-- Devoured Burgers -->
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="right"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        {{this.id}} - {{this.burger_name}}
                        <button type="button" class="trashburger btn btn-danger" id="remove" data-id="{{this.id}}"
                            data-devoured="{{devoured}}">Throw it in the trash~!</button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div><!-- /row -->
</div>



